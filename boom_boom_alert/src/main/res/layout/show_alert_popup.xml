<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/ic_suc"/>
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Success!!"
                android:textSize="25dp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:textColor="@color/success_color"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Dear Rasel,\n We recognize you successfully. Thank you for using DIMS"
                android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="20dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">
                <Button
                    android:id="@+id/cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/new_button_s_red"
                    android:paddingHorizontal="10dp"
                    android:text="Cancel"
                    android:textAllCaps="false"
                    android:textColor="@drawable/text_design"
                    android:layout_marginHorizontal="10dp"/>

                <Button
                    android:id="@+id/success"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Ok"
                    android:textAllCaps="false"
                    android:paddingHorizontal="10dp"
                    android:background="@drawable/new_button_s"
                    android:textColor="@drawable/text_design"
                    android:layout_marginHorizontal="10dp"/>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>